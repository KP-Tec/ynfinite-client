<script type="application/ld+json">
    {
        "@context": "https://schema.org/",
        "@type": "Person",
        {% if _yn_schema.firstName %}
            "givenName": "{{_yn_schema.firstName|raw}}",
        {% endif %}
        {% if _yn_schema.lastName %}
            "familyName": "{{_yn_schema.lastName|raw}}",
        {% endif %}
        {% if _yn_schema.firstName and _yn_schema.lastName %}
            "name": "{{_yn_schema.firstName|raw}} {{ _yn_schema.lastName|raw}}",
        {% endif %}
        {% if _yn_schema.url %}
            "url": "{{_yn_schema.url|raw}}",
        {% endif %}
        {% if _yn_schema.image %}
    		"image": "{{_yn_schema.image[0].path|raw}}",
	  	{% endif %}
        {% if _yn_schema.sameAs %}
			"sameAs": [{% for _yn_sameAs in _yn_schema.sameAs %}"{{_yn_sameAs.url|raw}}"{% if not loop.last %},{% endif %}{% endfor %}]
		{% endif %}
        {% if _yn_schema.jobTitle %}
            "jobTitle": "{{_yn_schema.jobTitle}}",
        {% endif %}
        {% if _yn_schema.company %}
            "worksFor": {
                "@type": "Organization",
                "name": "{{_yn_schema.company}}"
            }  
        {% endif %}
        {% if _yn_schema.knowsAbout %}
            "knowsAbout": [
                {% for _yn_knowsAbout in _yn_schema.knowsAbout %}
                    "{{_yn_knowsAbout.text|raw}}"{% if not loop.last %},{% endif %}
                {% endfor %}
            ],
        {% endif %}
        {% if _yn_schema.awards %}
            "awards": [
                {% for _yn_awards in _yn_schema.awards %}
                    "{{_yn_awards.award|raw}}"{% if not loop.last %},{% endif %}
                {% endfor %}
            ],
        {% endif %}
    }
</script>