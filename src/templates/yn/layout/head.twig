{% set seoTitle = _ynfinite.content.settings.seo.title ?: _ynfinite.page.meta.title|default(_ynfinite.site.meta.title) %}
{% set seoDescription = _ynfinite.content.settings.seo.description|default(_ynfinite.page.meta.description) %}
{% set seoKeywords = _ynfinite.content.settings.seo.keywords|default(_ynfinite.page.meta.keywords) %}

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>{{ seoTitle }}</title>

{% set favicon = _ynfinite.site.meta.favicon[0]|default(null) %}
{% if favicon is not null %}
	<link rel="icon" type="{{ favicon.file_type }}" sizes="192x192" href="{{ favicon.path }}?w=192&h=192" />
	<link rel="icon" type="{{ favicon.file_type }}" sizes="32x32" href="{{ favicon.path }}?w=32&h=32" />
	<link rel="icon" type="{{ favicon.file_type }}" sizes="96x96" href="{{ favicon.path }}?w=96&h=96" />
	<link rel="icon" type="{{ favicon.file_type }}" sizes="16x16" href="{{ favicon.path }}?w=16&h=16" />
	<link rel="apple-touch-icon" sizes="57x57" href="{{ favicon.path }}?w=57&h=57" />
	<link rel="apple-touch-icon" sizes="60x60" href="{{ favicon.path }}?w=60&h=60" />
	<link rel="apple-touch-icon" sizes="72x72" href="{{ favicon.path }}?w=72&h=72" />
	<link rel="apple-touch-icon" sizes="76x76" href="{{ favicon.path }}?w=76&h=76" />
	<link rel="apple-touch-icon" sizes="114x114" href="{{ favicon.path }}?w=114&h=114" />
	<link rel="apple-touch-icon" sizes="120x120" href="{{ favicon.path }}?w=120&h=120" />
	<link rel="apple-touch-icon" sizes="144x144" href="{{ favicon.path }}?w=144&h=144" />
	<link rel="apple-touch-icon" sizes="152x152" href="{{ favicon.path }}?w=152&h=152" />
	<link rel="apple-touch-icon" sizes="180x180" href="{{ favicon.path }}?w=180&h=180" />
	<meta name="msapplication-TileImage" content="{{ favicon.path }}?w=144&h=144" />
{% endif %}

<meta name="description" content="{{ seoDescription }}" />
<meta name="keyword" content="{{ seoKeywords }}" />

<meta property="og:site_name" content="{{ _ynfinite.site.meta.title }}" />
<meta property="og:type" content="{{ _ynfinite.content.setting.opengraph.type|default("website") }}" />
<meta property="og:title" content="{{ _ynfinite.content.settings.opengraph.title|default(seoTitle) }}" />
<meta name="twitter:title" content="{{ _ynfinite.content.settings.opengraph.title|default(seoTitle) }}" />
<meta name="twitter:card" content="summary_large_image" />

<meta property="og:description" content="{{ _ynfinite.content.settings.opengraph.description|default(seoDescription) }}" />
<meta name="twitter:description" content="{{ _ynfinite.content.settings.opengraph.description|default(seoDescription) }}" />

{% set ogImage = _ynfinite.content.settings.opengraph.images[0]|default(null) %}
{% if ogImage is not null %}
	<meta property="og:image:title" content="{{ _ynfinite.content.settings.seo.title ?: _ynfinite.page.meta.title|default('Title') }}">
	<meta property="og:image:url" content="{{ ogImage.path }}?w=1200&h=630&disableWebp=1" />
	<meta property="og:image:type" content="{{ ogImage.file_type }}" />
	<meta property="og:image:width" content="1200" />
	<meta property="og:image:height" content="630" />
	<meta property="og:image:alt" content="{{ ogImage.metadata.alt }}" />
	<meta name="twitter:image" content="{{ ogImage.path }}?w=1200&h=675&disableWebp=1" />
	<meta name="twitter:image:alt" content="{{ ogImage.metadata.alt }}" />
{% endif %}

<meta property="og:url" content="{{ _ynfinite.currentDomain }}{{ urlData.cleanURL }}" />
<meta name="twitter:url" content="{{ _ynfinite.currentDomain }}{{ urlData.cleanURL }}" />

<meta name="robots" content="{{ _ynfinite.page.meta.robots|default("index,follow") }}" />

{% if _ynfinite.page.type == "listing" %}
	{% if _ynfinite.pagination.currentPage %}
		<link rel="canonical" href="{{ _ynfinite.page.meta.canonical|default(_ynfinite.currentDomain ~ urlData.cleanURL) }}?_y.page={{ _ynfinite.pagination.currentPage }}" />
	{% else %}
		<link rel="canonical" href="{{ _ynfinite.page.meta.canonical|default(_ynfinite.currentDomain ~ urlData.cleanURL) }}" />
	{% endif %}
{% else %}
	<link rel="canonical" href="{{ _ynfinite.content.settings.seo.canonical|default(_ynfinite.page.meta.canonical|default(_ynfinite.currentDomain ~ urlData.cleanURL)) }}" />
{% endif %}

{% if _ynfinite.pagination.prevPage %}
	<link rel="prev" href="{{ _ynfinite.page.meta.canonical|default(_ynfinite.currentDomain ~ urlData.listingURL) }}{{ urlData.separator }}_y.page={{ _ynfinite.pagination.prevPage }}" />
{% endif %}
{% if _ynfinite.pagination.nextPage %}
	<link rel="next" href="{{ _ynfinite.page.meta.canonical|default(_ynfinite.currentDomain ~ urlData.listingURL) }}{{ urlData.separator }}_y.page={{ _ynfinite.pagination.nextPage }}" />
{% endif %}
