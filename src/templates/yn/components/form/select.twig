{% extends "yn/components/form/basic.twig" %}

{% block field %}
	<select name="fields[{{field.alias}}]" {% if field.required %} required {% endif %} {{field.attributes|raw}}>
		{% if field.emptyLabel %}
			<option value="" {% if field.required %} disabled {% endif %}>{{field.emptyLabel}}</option>
		{% endif %}
		{% for option in field.items %}
			<option value={{option.value}} {% if field.value == option.value %} selected {% endif %}>{{option.label}}</option>
		{% endfor %}
	</select>
{% endblock field %}
