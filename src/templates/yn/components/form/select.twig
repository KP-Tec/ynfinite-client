{% extends "yn/components/form/basic.twig" %}

{% block field %}
	<select data-ynfield="true" name="fields{{parent}}[{{field.alias}}]" {% if field.required %} required {% endif %} {{field.attributes|raw}}>
		{% if field.emptyLabel %}
			<option value="">{{field.emptyLabel}}</option>
		{% endif %}
		{% for option in field.options %}
			<option value="{{option.value}}" {% if field.value == option.value or option.selected %} selected {% endif %}>{{option.label}}</option>
		{% endfor %}
	</select>
{% endblock field %}
