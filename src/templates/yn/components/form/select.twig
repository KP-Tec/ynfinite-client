{% extends "yn/components/form/basic.twig" %}

{% block field %}
	<select data-ynfield="true" name="fields{{parent}}[{{field.alias}}]" {% if field.required %} required {% endif %} {{field.attributes|raw}} {% if form.alias == 'search_markets' %} onchange="if (this.options[this.selectedIndex].innerHTML != '{{ field.emptyLabel }}') {console.log(this.options[this.selectedIndex].value); location.href = '{{ _yfunc('linkPage', 'listing_maerkte') }}/' + this.options[this.selectedIndex].value}" {% endif %}>
		{% if field.emptyLabel %}
			<option value="" selected {% if field.required %} disabled {% endif %}>{{field.emptyLabel}}</option>
		{% endif %}
		{% for option in field.options %}
			<option value="{{ option.value }}" {% if field.value == option.value or option.selected %} selected {% endif %}>{{option.label}}</option>
		{% endfor %}
	</select>
{% endblock field %}
