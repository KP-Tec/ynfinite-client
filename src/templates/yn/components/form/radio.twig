{% if field.items|length > 1 %}
	<div class="widget-group widget-group--radio">
	{% endif %}
	{% for option in field.items %}
		<div class="widget widget--radio">
			<input type="radio" id="{{form._id}}_{{field.alias}}_{{option.value}}" name="fields[{{field.alias}}]" value="{{option.value}}" {% if field.value == option.value %} checked {% endif %} {% if field.required %} required {% endif %}/>
			<label class="widget__label" for="{{form._id}}_{{field.alias}}_{{option.value}}">
				<div class="ynfinite-field-text">{{option.label}}</div>
			</label>
		</div>
	{% endfor %}
	{% if field.items|length > 1 %}
	</div>
{% endif %}
