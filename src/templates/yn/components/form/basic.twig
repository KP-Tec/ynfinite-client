{% if renderWidget != false %}
	<div class='widget widget--{{field.type}}'>
		<label class="widget__label" for="{{field.alias}}">{{field.label}}
			{% if(field.required) %}
				<span class="required">*</span>
			{% endif %}
		</label>


		<div class="widget__input-container">
		{% endif %}
		{% block field %}
			<input type="{{field.type}}" name="fields[{{field.alias}}]" value="{{field.value|default(addValue)}}" placeholder="{{field.placeholder}}" {% if field.required %} required {% endif %} {{field.attributes|raw}}/>
		{% endblock field %}
		{% if renderWidget != false %}
		</div>
	</div>
{% endif %}
