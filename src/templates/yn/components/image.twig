{# set classes for image orientation #}
{% if width > height %}
	{% set classes = classes ~ ' horizontal' %}
{% else %}
	{% set classes = classes ~ ' vertical' %}
{% endif %}

{# set classes for lazyloading #}
{% if (nolazy == "nolazy") or (nolazy == 1) or (nolazy == true) %}
	{% set classes = classes %}
{% else %}
	{% set classes = classes ~ ' lazyload' %}
{% endif %}

<img src="{{ src }}"
	{%- if nolazy == '' %} data-src="{{ src }}"{% endif -%}
	{%- if srcset %} srcset="{{ srcset }}"{%- if nolazy == '' %} data-srcset="{{ srcset }}"{% endif -%}{% endif -%}
	class="{{ classes }}"
	{%- if image.metadata.title %} title="{{ image.metadata.title }}"{% endif -%}
	{%- if width %} width="{{width}}"{% endif -%}
	{%- if height %} height="{{height}}" {% endif -%}
	alt="{{ image.metadata.alt|default(image.metadata.filename|default(image.name)) }}{% if image.metadata.author %} &copy;{{ image.metadata.author }}{% endif %}" />
