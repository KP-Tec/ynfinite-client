{% set classes = "" %}

{% if nolazy != "nolazy" and nolazy != 1 and nolazy != true %}
	{% set classes = classes ~ " lazyload" %}
{% endif %}

{% if width > height %}
	{% set classes = classes ~ " horizontal" %}
{% else %}
	{% set classes = classes ~ " vertical" %}
{% endif %}

<img data-src="{{ src }}" {%- if srcset %} data-srcset="{{ srcset }}" {% endif -%} {%- if image.metadata.title %} title="{{ image.metadata.title }}" {% endif -%} {%- if width %} width="{{width}}" {% endif -%} {%- if height %} height="{{height}}" {% endif -%} alt="{{ image.metadata.alt|default(image.metadata.filename|default(image.name)) }} {% if image.metadata.author %} &copy;{{ image.metadata.author }}{% endif %}" class="{{classes}}"/>
