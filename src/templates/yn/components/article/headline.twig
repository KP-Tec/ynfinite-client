{% if component.value %}
    <div class="yn-article__heading {{ component.config.size ?: component.config.order }}">
        {% if component.overline %}
            <{{component.config.order}} class="tagline">{{ component.overline|raw }}</{{component.config.order}}>
            <p class="heading" id="{{ component.alias }}">{{ component.value|raw }}</p>
        {% else %}
            <{{component.config.order}} class="heading" id="{{ component.alias }}">{{ component.value|raw }}</{{component.config.order}}>
        {% endif %}
        {% if component.subline %}
            <p class="subline">{{ component.subline|raw }}</p>
        {% endif %}
    </div>
{% endif %}