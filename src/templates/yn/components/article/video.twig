<div class="component-video">
	{% if component.config.provider == "youtube" %}
		<iframe title="Video" width="560" height="315" src="https://www.youtube.com/embed/{{component.value}}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
	{% endif %}

	{% if component.config.provider == "vimeo" %}
		{{component.value | raw}}
	{% endif %}

	{% if component.config.provider == "other" %}
		{{component.value | raw}}
	{% endif %}
</div>
