{% set config = cookies.config %}
{% set consents = [] %}
{% for item in cookies.available %}
	{% set consents = consents|merge(['"' ~ item._id ~ '"']) %}
{% endfor %}

<div id="yn-cookies" class='yn-cookies' data-hide-manager="{{hideConsentManager ? "true" : "false"}}" data-consents="[{{ consents|join(',') }}]">
	<div class='yn-cookies__inner'>
		{# index #}
		<div class='yn-cookies__page yn-cookies__page--visible' data-yn-cookie-page='information'>
			<div class='yn-cookies__header'>
				<h3>{{config.headline}}</h3>
			</div>
			<div class='yn-cookies__body'>
				{{config.information|raw}}

			</div>
			<div class='yn-cookies__footer'>
				{% if cookies.available|length > 0 %}
					<button id="yn-cookies__show-configuration" class='yn-cookies__link yn-cookies__button button'>{{ "ConsentManager_ChangeSettings"|trans }}</button>
				{% endif %}
				<button id="yn-cookies__deny-all" class='yn-cookies__button button button--solid button--pri'>{{ "ConsentManager_DenyAll"|trans }}</button>
				<button id="yn-cookies__allow-all" class='yn-cookies__button button button--solid button--pri'>{{ "ConsentManager_AcceptAll"|trans }}</button>
			</div>
		</div>

		{# settings #}
		<div class='yn-cookies__page yn-cookies__page--hidden' data-yn-cookie-page='configuration'>
			<div class='yn-cookies__header'>
				<h3>{{ "ConsentManager_Settings"|trans }}</h3>
			</div>
			<div class='yn-cookies__body'>
				<form id="yn-cookies-form">
					<ul class="yn-cookies__settings">
						{# necessary cookies #}
						<li class="yn-cookies__settings__item">
							<label for="yn-necessary-cookies">
								<strong>{{ config.necessary.headline }}</strong>
								<div class="yn-cookies__settings__switch">
									<div class="yn-cookies__switch">
										<input name="necessary" type="checkbox" id="yn-necessary-cookies" checked disabled>
										<span class="yn-cookies__slider disabled"></span>
									</div>
								</div>
							</label>
							{{config.necessary.text|raw}}
						</li>
						{# optional cookies #}
						{% for cookie in cookies.available %}
							<li data-yn-cookie-settings-id="{{ cookie._id }}" class="yn-cookies__settings__item">
								<label for="{{ cookie._id }}">
									<strong>{{ cookie.headline }}</strong>
									<div class="yn-cookies__settings__switch" data-yn-default="{{ cookie.default }}">
										<div class="yn-cookies__switch">
											<input name="activeScripts[]" type="checkbox" id="{{ cookie._id }}" value="{{ cookie._id }}" {% if cookie._id in cookies.active %}checked{% endif %}>
											<span class="yn-cookies__slider"></span>
										</div>
									</div>
								</label>
								{{cookie.text|raw}}
							</li>
						{% endfor %}
					</ul>
				</form>
			</div>
			<div class="yn-cookies__footer">
				<button id="yn-cookies__show-information" class="yn-cookies__link button">{{ "ConsentManager_Back"|trans }}</button>
				<button id="yn-cookies__set-cookies" class="yn-cookies__button button button--solid button--pri">{{ "ConsentManager_SaveSettings"|trans }}</button>
			</div>
		</div>
	</div>
</div>
