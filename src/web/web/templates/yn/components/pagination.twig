{% set pagination = _ynfinite.pagination %}

<ul class='yn-pagination'>
    {% if pagination.currentPage == 1 %}
        <li class='yn-pagination__first'><span>&lt;&lt;</span></li>
    {% else %}
        <li class='yn-pagination__first'><a href='{{uriData.listingURL}}_y.page=1'>&lt;&lt;</a></li>
    {% endif %}

    {% if pagination.currentPage == 1 %}
        <li class='yn-pagination__prev'><span>&lt;</span></li>
    {% else %}
        <li class='yn-pagination__prev'><a href='{{uriData.listingURL}}_y.page={{pagination.currentPage-1}}'>&lt;</a></li>
    {% endif %}


    {% for page in 1..pagination.totalPages %}
        <li class='yn-pagination__page{% if page == pagination.currentPage %} yn-pagination__page--active{% endif %}'>
            {% if page == pagination.currentPage %}
                <span>{{page}}</span>
            {% else %}
                <a href='{{uriData.listingURL}}_y.page={{page}}'>{{page}}</a>
            {% endif %}
        </li>
    {% endfor %}

    {% if pagination.currentPage == pagination.totalPages %}
        <li class='yn-pagination__next'><span>&gt;</span></li>
    {% else %}
        <li class='yn-pagination__next'><a href='{{uriData.listingURL}}_y.page={{pagination.currentPage+1}}'>&gt;</a></li>
    {% endif %}

    {% if pagination.currentPage == pagination.totalPages %}
        <li class='yn-pagination__last'><span>&gt;&gt;</span></li>
    {% else %}
        <li class='yn-pagination__last'><a href='{{uriData.listingURL}}_y.page={{pagination.totalPages}}'>&gt;&gt;</a></li>
    {% endif %}
</ul>