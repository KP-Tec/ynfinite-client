{% set data = section.data %}

<section class="section">
	{% if _ynfinite.content.data.entries_handle|length %}
		<p class="handle">{{ data.entries_handle }}</p>
	{% endif %}

	<div class="inner">
		{% if _ynfinite.content.data.entries_separator|length %}
			<p class="separator wow fadeInUp"><span>{{ _ynfinite.content.data.entries_separator }}</span></p>
		{% endif %}

		{% if _ynfinite.content.data.entries_entries|length %}
			{% for item in _ynfinite.content.data.entries_entries %}
				<div class="row wow fadeInUp {% if loop.last == false %} mb-3{% endif %}">
					<div class="col-xs-12 col-sm{% if loop.index is not divisible by(2) %} text-right-sm{% endif %}">
						<p class="tagline">{{ item.data.general_tagline }}</p>
						<h2 class="title">{{ item.data.general_ueberschrift }}</h2>
						{% if item.data.general_text|length > 10 %}
							<div class="bodytext">
								{{ item.data.general_text|raw }}
								{% if item.data.general_button|length %}
									<p>
										<a href="{{ item.data.general_button[0].href }}" class="button button--primary">{{ item.data.general_button[0].text }}</a>
									</p>
								{% endif %}
							</div>
						{% endif %}
					</div>

					<div class="col-xs-12 col-sm{% if loop.index is divisible by(2) %} first-sm text-right-sm{% endif %}">
						{% if item.data.general_bild|length %}
							<figure>
								<img data-src="{{ item.data.general_bild[0].path }}&w=800" class="lazyload" alt="{{ item.data.general_bild[0].metadata.alt }}">
							</figure>
						{% endif %}

						{% if item.data.general_bubble_text|length > 10 %}
							<div class="bubble">
								<div class="bubble__content">
									{% if item.data.general_bubble_ueberschrift|length %}
										<h3>{{ item.data.general_bubble_ueberschrift }}</h3>
									{% endif %}
									{{ item.data.general_bubble_text|striptags('<p><br><ul><ol><li><a><b>')|raw }}
								</div>
							</div>
						{% endif %}
					</div>
				</div>
			{% endfor %}
		{% endif %}
	</div>
</section>
