{% set data = section.data %}

<section class="section wow fadeInUp">
	<div class="inner">
		<div class="row">
			{% if data.general_bild|length %}
				{% set image = data.general_bild[0] %}
				<div class="col-xs-12 col-sm-5">
					<figure>
						<img data-src="{{ image.path }}" class="lazyload" alt="{{ image.metadata.alt }}">
					</figure>
				</div>
			{% endif %}
			<div class="col-xs-12 col-sm">
				<div class="pl-2-md">
					<img data-src="{{ data.general_logo[0].path }}" class="lazyload" alt="{{ data.general_logo[0].metadata.alt }}">
					<h2 class="title tp mt-2">{{ data.general_zitat }}</h2>
					{{ data.general_text|raw }}
				</div>
			</div>
		</div>
	</div>
</section>
