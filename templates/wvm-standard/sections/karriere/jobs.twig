{% set data = section.data %}

<section class="section wow fadeInUp">
	<div class="handle">{{ template.data.general_bezeichnung }}</div>
	<div class="inner">
		<p class="separator"><span>{{ template.data.general_bezeichnung }}</span></p>
		<div class="row middle-xs">
			<div class="col-xs-6 col-xs-offset-3 col-sm-3 col-sm-offset-0 text-center mb-2">
				<h3 class="h4 title tp bold">{{template.data.general_ueberschrift}}</h3>
				<h4 class="title tp pt-1">{{template.data.general_text_1}}</h4>
				<img src="{{template.data.general_bild_1[0].path}}" class="pt-1 ph-2" alt="{{template.data.general_bild_1[0].metadata.alt}}">
				<h4 class="title tp pt-1">{{template.data.general_text_2}}</h4>
				<img src="{{template.data.general_bild_2[0].path}}" class="pt-1 ph-2" alt="{{template.data.general_bild_1[0].metadata.alt}}">
			</div>

			<div class="col-xs-12 col-sm-9">
				<ul class="list list--jobs" id="start-tv">
					{% for item in data.general_jobs %}
						<li><a href="#" class="js-tv" data-tv="tv-{{ loop.index0 }}">{{ item.data.general_ueberschrift }}</a></li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>
</section>

{# setup tvs #}
{% for item in data.general_jobs %}
	<section class="tv" data-tv="tv-{{loop.index0}}" id="tv-{{loop.index0}}">
		<div class="inner">
			<div class="row">
				<div class="col-xs-12">
					<h3 class="title">{{item.data.general_ueberschrift}}</h3>
				</div>
			</div>
			<div class="row mt-1">
				<div class="col-xs-12{% if item.data.general_teammitglieder|length %} col-sm-5{% endif %}">
					{{ item.data.general_kurzbeschreibung|raw }}
					{{ item.data.general_beschreibung|raw }}
				</div>
				{% if item.data.general_teammitglieder|length %}
					<div class="col-xs-12 col-sm-6 col-sm-offset-1">
						<h4 class="title">Das Team</h4>
						<div class="row mt-1">
							{% for member in item.data.general_teammitglieder %}
								<div class="col-xs-6">
									<figure class="w100 mb-1">
										<img src="{{member.data.general_bild[0].path}}" alt="">
										<figcaption>
											<strong>{{member.data.general_name}}</strong><br>
											{{member.data.general_position}}
										</figcaption>
									</figure>
								</div>
							{% endfor %}
						</div>
					</div>
				{% endif %}
			</div>
		</div>
		<button class="tv__button js-tv-close">&times;</button>
	</section>
{% endfor %}
