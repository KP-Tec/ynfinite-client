{% set data = section.data %}

{% if _ynfinite.content.raw.general_projektart != "preview" %}
	{% if data.general_news|length %}
		{% if _ynfinite.content.data.panel_news_hintergrundbild|length %}
			{% set image = _ynfinite.content.data.panel_news_hintergrundbild[0] %}
			<section class="section wow fadeInUp pv-0" id="news">
				<div class="banner">
					<div class="banner__image">
						<img
						data-src="{{ image.path }}?w=800"
						data-srcset="
						{{ image.path }}?w=420 360w,
						{{ image.path }}?w=800 760w,
						{{ image.path }}?w=1680 1400w"
						class="lazyload"
						title="{{ image.metadata.title }}"
						alt="{{ image.metadata.alt }}">

						{% if _ynfinite.content.data.panel_news_caption == 1 %}
							<span class="banner__caption">{{ _ynfinite.content.data.panel_news_caption_text|default('Unverbindliche Darstellung') }}</span>
						{% endif %}
					</div>
					<ul class="banner__list">
						{% for item in data.general_news %}
							<li>
								<small>{{item.data.general_datum|date("d.m.Y")}}</small>
								<h3><a href="{{_yfunc('linkPage', 'news', item.settings.seo.alias) }}">{{ item.data.general_ueberschrift|raw }}</a></h3>
							</li>
						{% endfor %}
					</ul>
				</div>
			</section>
		{% endif %}
	{% endif %}
{% endif %}
